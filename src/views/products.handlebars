<h1>Productos</h1>

<section class="containerProducts">
    {{#each plainProducts}}
        <a href="/products/{{this._id}}" class="product">
            <div>
                <strong>Id:</strong>
                {{this._id}}
            </div>
            <div>
                <strong>Título:</strong>
                {{this.title}}
            </div>
            <div>
                <strong>Precio:</strong>
                {{this.price}}
            </div>
            <div>
                <strong>Código:</strong>
                {{this.code}}
            </div>
            <div>
                <strong>Stock:</strong>
                {{this.stock}}
            </div>
            <div>
                <strong>Categoria:</strong>
                {{this.category}}
            </div>
            <div>
                <strong>Status:</strong>
                {{this.status}}
            </div>
        </a>
    {{/each}}
</section>

<div class="paginate">
    {{#if products.hasPrevPage}}
        <a href="/products?page={{products.prevPage}}" id="prevPage"><button
            >Anterior</button></a>
    {{/if}}
    {{#if products.hasNextPage}}
        <a href="/products?page={{products.nextPage}}" id="nextPage"><button
            >Siguiente</button></a>
    {{/if}}
</div>